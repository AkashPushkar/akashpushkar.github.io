{% extends "layout.njk" %}


{% block content %}


		{% include "header.njk" %}		
		

		<div class="row">
			<div class="col">
				<div class="btn-group">
					<button type="button" class="btn btn-outline-primary m-2 active" id="all">All</button>
					<button type="button" class="btn btn-outline-primary m-2" id="research">Research</button>
					<button type="button" class="btn btn-outline-primary m-2" id="webDevelopment">Web Development</button>
				</div>	
			</div>
		</div>

		

		{% for project in projects %}
			<div class="filterDiv {{project.filter}}">
				
				
				<div class="media row p-4">

					<img src="{{ project.src }}" class="mx-3 img-fluid col-3 project-img">
					<div class="media-body col-8">
						
						<!-- Project Name -->
						<h5 class="mt-0"> {{ project.title }} </h5>
						
						<!-- Authors -->
						<h6>
							{% for author in project.authors %}
								{% if author.name == "Akash Pushkar"%}
									<b>{{ author.name }},</b>
								{% elif author.link %}
									<a href="{{ author.link }}">{{ author.name }},</a>
								{% else %}
									<p style="display:inline">{{ author.name }},</p>
								{% endif %}
							{% endfor %}
						</h6>

						<!-- Journal/ Conference name(if applicable) -->
						{% if project.publication%}
							<h6><i>{{project.publication}}</i></h6>
						{% endif %}

						<!-- tags -->
						{% if project.tags%}
							<h6><u>tags</i>: {{project.tags}}</h6>
						{% endif %}


						<!-- Project Page -->
						{% if project.projectPage %}
							<a href="{{ project.projectPage }}">project page</a> |
						{% endif%}


						<!-- Paper -->
						{% if project.paper %}
							<a href="{{ project.paper }}">paper</a> |
						{% endif%}

						<!-- Project Report -->
						{% if project.report %}
							<a href="{{ project.report }}">report</a> |
						{% endif%}

						<!-- Presentation -->
						{% if project.presentation %}
							<a href="{{ project.presentation }}">presentation</a> |
						{% endif%}

						<!-- Video -->
						{% if project.video %}
							<a href="{{ project.video }}">video</a> |
						{% endif%}


						<!-- Code -->
						{% if project.code %}
							<a href="{{ project.code }}">code</a> |
						{% endif%}

						<!-- software product -->
						{% if project.softwareProduct %}
							<a href="{{ project.softwareProduct }}">software product</a>
						{% endif%}

					</div>

				</div>
				<hr>
			</div>
			

		{% endfor %}



		{% include "footer.njk" %}


		<script src="../js/filter_projects.js" type="text/javascript"></script>


{% endblock %}